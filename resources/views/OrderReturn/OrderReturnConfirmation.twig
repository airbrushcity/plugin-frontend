{% extends getPartial('page-design') %}

{% block PartialHead %}
    {% embed getPartial('page-metadata') %}
        {% block title trans("Frontend::Template.returnConfirmationTitle") %}
    {% endembed %}
{% endblock %}

{% block PageBody %}

    <div class="page-content basket order-return container-max mb-5 mt-3">
        <div class="row mb-5">
            <div class="col-12">
                <h2 class="h1">{{ trans("Frontend::Template.returnConfirmationThanks") }}</h2>
                <p>{{ trans('Frontend::Template.returnConfirmationInfo') }}</p>
            </div>
        </div>
        <hr>
        <div class="row">
            {% set loggedIn = frontend.Account.getIsAccountLoggedIn %}
            <div class="col-6 col-md-4 {% if loggedIn %}offset-md-2{% else %}offset-3 offset-md-4{% endif %}">
                <a href="{{ homepageURL }}" type="" class="btn btn-primary btn-block bg-primary">{{ trans("Frontend::Template.returnConfirmationHomepage") }}</a>
            </div>


            {% if loggedIn %}
                <div class="col-6 col-md-4">
                    <a href="{{ urls.myAccount }}" type="" class="btn btn-primary btn-block bg-primary">{{ trans("Frontend::Template.returnConfirmationMyAccount") }}</a>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}
