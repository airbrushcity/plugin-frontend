{% import "Frontend::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set numberOfCols         = config('Ceres.footer.number_of_cols') %}
{% set colSize              = (12 / (numberOfCols + 1)) %}
{% set displayedCategories  = [] %}
{% set numberOfFeatures     = config('Ceres.footer.number_of_features') %}
{% set topButtonPosition    = config('Ceres.footer.to_top_button') %}

{% set footerContainer = LayoutContainer.show("Frontend::Footer") | trim %}
{% if footerContainer is empty %}

<div class="footer d-print-none">

    <div class="btn text-center border mx-auto rounded-lg p-0{% if topButtonPosition == "right" %} back-to-top btn-secondary pt-1{% else %} back-to-top-center{% endif %}">
        <i class="fa fa-chevron-up fa-2x default-float"></i>
    </div>

    <div class="btn btn-secondary d-block d-md-none text-center p-2" v-scroll-to-top>
        <i class="fa fa-arrow-up fa-2x default-float" aria-hidden="true"></i>
    </div>

    {% if numberOfFeatures > 0 %}
        <div class="footer-features py-3 container-max">
            <div class="row">
                {% for i in 1..numberOfFeatures %}
                    <div class="col-12 col-sm-4 text-center">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        {{ trans('Frontend::Template.footerStoreFeature' ~ i) }}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="container-max footer-content">
        <div class="row">
            <div class="col-12">
                <div class="footer-services d-flex mt-4">
                    {% set paymentMethodContent = LayoutContainer.show("Frontend::Homepage.PaymentMethods") %}
                    {% if paymentMethodContent|trim is not empty %}
                        <div class="mb-3">
                            <strong class="w-100">{{ trans("Frontend::Template.footerPaymentMethods") }}</strong>
                            {{ paymentMethodContent }}
                        </div>
                    {% endif %}
                    {% set shippingContent = LayoutContainer.show("Frontend::Homepage.Shipping") %}
                    {% if shippingContent|trim is not empty %}
                        <div class="mb-3">
                            <strong class="w-100">{{ trans("Frontend::Template.footerOrderShippedBy") }}</strong>
                            {{ shippingContent }}
                        </div>
                    {% endif %}
                    {% set certifiedContent = LayoutContainer.show("Frontend::Homepage.Certified") %}
                    {% if certifiedContent|trim is not empty %}
                        <div class="mb-3">
                            <strong class="w-100">{{ trans("Frontend::Template.footerCertifiedBy") }}</strong>
                            {{ certifiedContent }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <div class="row">
            <hr class="my-4">
            {% for i in 1..numberOfCols %}
                <div class="col-6 col-sm-3 col-lg-2">
                    <nav class="mb-4">
                        <h2 class="h5 font-weight-bold">{{ trans('Frontend::Template.footerColumnTitle' ~ i) }}</h2>
                        <ul class="list-unstyled">

                            {% set footerCategories = config('Ceres.footer.col_' ~ i ~ '_categories') | find("[0-9]+") %}
                            {% for catID in footerCategories %}

                                {% set cat = services.category.get(catID, lang) %}

                                {% if cat is not null %}
                                    {% set displayedCategories = displayedCategories | merge([catID]) %}
                                    <li>
                                        <a href="{{ services.category.getURL( cat ) }}">
                                            {{ cat.details.first.name }}</a>
                                    </li>
                                {% endif %}

                            {% endfor %}

                        </ul>
                    </nav>
                </div>
            {% endfor %}
            <hr class="d-sm-none my-4">
            <div class="col-6 col-sm-3">
                {{ LayoutContainer.show("Frontend::Footer.RowOne") }}
            </div>
            <div class="col-12 col-sm-3">
                <div class="row">
                    {% set rowTwo = LayoutContainer.show("Frontend::Footer.RowTwo") %}
                    
                    {{ rowTwo }}

                    <div class="col-12{% if rowTwo|trim is not empty %} col-sm-6 col-lg-12{% endif %}">
                        {{ LayoutContainer.show("Frontend::Footer.RowThree") }}
                    </div>
                </div>
            </div>
        </div>            

        {% set cat = services.category.get(config('Ceres.global.category.legal_disclosure')) %}
        <div class="copyright text-center my-3">
            <div>
                {% autoescape false %}
                    <a class="py-4 px-2" href="{{ urls.cancellationRights }}">{{ trans("Frontend::Template.footerCancellationRight", {"hyphen": "&shy;"}) }}</a>
                    {% if config("Ceres.footer.cancellation_use_pdf") == "true" %}
                        <a class="py-4 px-2" href="{{ config('Ceres.footer.cancellation_pdf_path') }}" target="_blank">{{ trans("Frontend::Template.footerCancellationForm", {"hyphen": "&shy;"}) }}</a>
                    {% else %}
                        <a class="py-4 px-2" href="{{ urls.cancellationForm }}">{{ trans("Frontend::Template.footerCancellationForm", {"hyphen": "&shy;"}) }}</a>
                    {% endif %}
                    <a class="py-4 px-2" href="{{ urls.legalDisclosure }}">{{ trans("Frontend::Template.footerLegalDisclosure") }}</a>
                    <a class="py-4 px-2" href="{{ urls.privacyPolicy }}">{{ trans("Frontend::Template.footerPrivacyPolicy", {"hyphen": "&shy;"}) }}</a>
                    <a class="py-4 px-2" href="{{ urls.gtc }}">{{ trans("Frontend::Template.footerGtc") }}</a>
                    {% if (config("Ceres.contact.shop_mail") | length > 0 and config("Ceres.contact.shop_mail") != "your@email.com") or config('IO.routing.category_contact') > 0 %}
                        <a class="py-4 px-2" href="{{ urls.contact }}">{{ trans("Frontend::Template.footerContact") }}</a>
                    {% endif %}
                {% endautoescape %}
            </div>
            <a rel="nofollow" href="https://www.airbrush-city.de">
                <img alt="Airbrush City Logo" class="plenty-brand mt-4 mb-1" src="https://image.airbrush-city.de/frontend/design/airbrush/logo-footer.png" rel="nofollow">
            </a>
            <br>
            <small>&copy; Copyright {{ "now" | date("Y") }} | {{ trans("Frontend::Template.footerAllRightsReserved") }}</small>
        </div>
    </div>
</div>
{% else %}
    <div class="footer container-max d-print-none">
        <div class="row">
            <div class="col clearfix">
                {{ footerContainer | raw }}
            </div>
        </div>

        <div class="btn text-center border mx-auto rounded-lg p-0{% if topButtonPosition == "right" %} back-to-top btn-secondary pt-1{% else %} back-to-top-center{% endif %}">
            <i class="fa fa-chevron-up fa-2x default-float"></i>
        </div>

        <div class="btn btn-secondary d-block d-md-none text-center p-2" v-scroll-to-top>
            <i class="fa fa-arrow-up fa-2x default-float" aria-hidden="true"></i>
        </div>
    </div>
{% endif %}
