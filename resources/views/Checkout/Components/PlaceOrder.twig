{% import "Frontend::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

<script type="x/template" id="vue-place-order">
    <div>
        {% set buttonReplacement = LayoutContainer.show("Frontend::Checkout.PlaceOrder") %}
        {% if buttonReplacement|trim is not empty %}
            {{ buttonReplacement }}
        {% else %}
            <button
                class="btn btn-block btn-primary btn-appearance"
                :class="buttonClasses"
                :style="paddingInlineStyles"
                @click="placeOrder()"
                :disabled="waiting || isBasketLoading || !isBasketInitiallyLoaded"
                {{ set_testing_attr("data-testing", "place-order") }}>
                <icon icon="arrow-right" :loading="waiting"></icon>
                {{ trans("Frontend::Template.checkoutBuyNow") }}
            </button>
        {% endif %}
    </div>
</script>
